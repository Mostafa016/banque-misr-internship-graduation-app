<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/cart_item_iv"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/cappuccino" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="vertical">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/cart_item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cappucino"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cart_item_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$50"
            android:textColor="#CF9775"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageButton
                android:id="@+id/cart_decrease_count_ib"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:backgroundTint="#CF9775"
                android:backgroundTintMode="src_in"
                android:padding="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/remove_circle_outline_24" />

            <TextView
                android:id="@+id/cart_item_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="10"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/cart_increase_count_ib"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:backgroundTint="#CF9775"
                android:backgroundTintMode="src_in"
                android:padding="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/add_circle_outline_24" />
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>